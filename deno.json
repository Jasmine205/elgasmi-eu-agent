{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "elgasmi-eu",
  "version": "1.0.0",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch server/deno-entry.ts",
    "start": "deno run --allow-net --allow-read --allow-env server/deno-entry.ts",
    "build": "deno compile --allow-net --allow-read --allow-env --output=dist/server server/deno-entry.ts"
  },
  "imports": {
    "@std/": "https://deno.land/std@0.220.0/",
    "hono": "https://deno.land/x/hono@v4.0.0/mod.ts",
    "drizzle-orm": "npm:drizzle-orm@0.44.5",
    "mysql2": "npm:mysql2@3.15.0"
  },
  "deploy": {
    "project": "elgasmi-eu",
    "entrypoint": "server/deno-entry.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"],
    "strict": true
  }
}
